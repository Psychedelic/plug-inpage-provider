{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "rootDir": "./",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "scripts",
    ".storybook",
    "**/*.spec.*",
    "**/*.test.*",
    "node_modules",
    "__snapshots__",
    "**/*.stories.*",
  ]
}
